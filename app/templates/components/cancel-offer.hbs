<a {{action "confirmCancelOffer"}}>
  <i class="fa fa-times"></i>
  {{t "cancel_offer.cancel"}}
</a>

<div id="confirmOfferCancelModal" class="small reveal-modal ui" data-options="close_on_background_click:false" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">

  <div class="receive_title">
    {{t "cancel_offer.donor_message"}}
  </div>

  {{select-list
    content=cancellationOptions
    on-change=(action (mut selectedReason))
    selectedValue=selectedReason}}

  {{#if displayCustomReason}}
    <div class="{{if invalidReason 'has-error'}}">
      {{input type="text" name="cancelReason" value=offer.cancelReason maxlength="50"}}
    </div>
  {{/if}}

  <a class="right button closeLink action1">{{t "receive.receiving.not_now"}}</a>
  <a class="right button confirmLink action2">{{t "cancel_offer.cancel"}}</a>
</div>
