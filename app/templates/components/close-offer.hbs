<a {{action 'confirmCloseOffer'}} class="{{classNames}}">{{t "logistics.close_offer"}}</a>

<div id="confirmOfferCloseModal" class="small reveal-modal ui" data-options="close_on_background_click:false" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">

  <div class="receive_title">
    {{t "review_offer.message_donor"}}
  </div>

  <div class="{{if invalidMessage 'has-error'}}">
    {{auto-resize-textarea data-autoresize=true id="closeOfferMessage" name="closeOfferMessage" value=closeMessage maxlength=255 }}
  </div>

  <a class="right button closeLink action1">{{t "receive.receiving.not_now"}}</a>
  <a class="right button confirmLink action2">{{t "review_offer.close_offer"}}</a>
</div>
