<div class="row tab-bar my-notifications">
  <div class="small-5 columns link">
    <a hreaf="#" {{action 'toggleShowUnread'}}>
      {{#if showUnread}}
        All notifications
      {{else}}
        Show unread only
      {{/if}}
    </a>
  </div>
  <div class="small-5 columns link">
    <a hreaf="#" {{action 'markAllRead'}}>
      Mark all read <i class="fa fa-check"></i>
    </a>
  </div>
  <div class="small-2 columns">
  </div>
</div>

<section class="main-section">
  <div class="row">
    <div class="small-12 columns">
      <ul class="list list-notifications">
      {{#each myNotifications as |notification|}}
        <li>{{partial "notificationThread"}}</li>
      {{/each}}
      </ul>
    </div>
  </div>
</section>
