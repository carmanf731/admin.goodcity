<div class="tabs-content item-content">
  <ul class="list list-offer-items">

    {{#each item in sortedItems}}
      {{#if item.isOffer}}
        <li>
          {{#link-to 'offer.donor_messages' model}}
            {{partial 'offer/recent_offer_message'}}
          {{/link-to}}
        </li>
      {{else}}
        <li>
          {{#if item.isAccepted}}
            {{#link-to 'review_item.accept' item}}
              {{partial 'offer/recent_item_message'}}
            {{/link-to}}
          {{else if item.isRejected}}
            {{#link-to 'review_item.reject' item}}
              {{partial 'offer/recent_item_message'}}
            {{/link-to}}
          {{else}}
            {{#link-to 'review_item' item}}
              {{partial 'offer/recent_item_message'}}
            {{/link-to}}
          {{/if}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>
