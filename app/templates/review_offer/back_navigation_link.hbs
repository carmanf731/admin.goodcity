{{#if offer.isSubmitted}}
  {{#link-to 'offers.submitted' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isReviewed}}
  {{#link-to 'in_progress' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isScheduled}}
  {{#link-to 'scheduled' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isClosed}}
  {{#link-to 'finished' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isReceived}}
  {{#link-to 'finished' classNames="back"}}{{t "back"}}{{/link-to}}
{{else}}
  {{#link-to 'in_progress' classNames="back"}}{{t "back"}}{{/link-to}}
{{/if}}
