{{#if offer.isSubmitted}}
  {{#link-to 'offers' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isReviewed}}
  {{#link-to 'offers.reviewed' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isScheduled}}
  {{#link-to 'offers.scheduled' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isClosed}}
  {{#link-to 'offers.closed' classNames="back"}}{{t "back"}}{{/link-to}}
{{else if offer.isReceived}}
  {{#link-to 'offers.received' classNames="back"}}{{t "back"}}{{/link-to}}
{{else}}
  {{#link-to 'offers.under_review' classNames="back"}}{{t "back"}}{{/link-to}}
{{/if}}
