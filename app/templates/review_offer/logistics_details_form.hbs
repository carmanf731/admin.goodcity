{{#validatable-form class="form-horizontal" action="completeReview" on="submit"}}

  <div class="small-12 columns gogovan-req">
    <div class='description'>{{t "logistics.ggv_hire"}}</div>

    <div class='radio-buttons'>
      {{#each gogovanOptions as |option|}}
        <span class="radio">
          {{view 'radio-button' name="selectionTest" selectionBinding='controller.selectedGogovanOption' value=option.id id=option.id}}
          <label class="radio-wrap small-only-text-center" for={{option.id}}>
            {{option.name}}
          </label>
        </span>
      {{/each}}
    </div>
  </div>

  <div class="small-12 columns gogovan-req">
    <div class='description'>{{t "logistics.portion_for_crossroads_truck"}}</div>

    {{view "select"
      content=crossroadsOptions
      optionLabelPath='content.name'
      optionValuePath='content.id'
      selection=selectedCrossroadsOption
      prompt='Select'
      required='true'}}
  </div>

  <div class="row">
    <div class="small-12 columns complete-review-button">
      {{#view "online-button" classNames="button expand"}}{{t "logistics.complete_review"}}{{/view}}
    </div>
  </div>

{{/validatable-form}}
