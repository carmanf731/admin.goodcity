<ul class="list receive-list">
{{#each item in model.items}}
  <li>
    {{#if (js-x "this.get('packages.length') > 1" item)}}
      <div class="text-center">{{item.itemType.name}}</div>
    {{/if}}

    {{#each item.packages as |package idx|}}
      <div>
        <img {{bind-attr src="item.displayImageUrl"}} />
        <div>

          <div class="package-name">
            {{package.quantity}}x
            {{package.packageName}}
          </div>
          {{#if (js-x "this == 0" idx)}}
            {{js-x "p0.get('notes') ? p0.get('notes') : p1.get('donorDescription')" package item}}<br/>
          {{else}}
            {{item.notes}}<br/>
          {{/if}}
          <br/>
          {{package.dimensions}}
        </div>
      </div>
      <div class="sep"></div>
    {{/each}}
  </li>
{{/each}}
</ul>
